{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Type_objet</th>
                <td>{{ produit.typeObjet }}</td>
            </tr>
            <tr>
                <th>Taille_objet</th>
                <td>{{ produit.tailleObjet }}</td>
            </tr>
            <tr>
                <th>Fragile</th>
                <td>{{ produit.fragile ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Poid_objet</th>
                <td>{{ produit.poidObjet }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ produit.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">back to list</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('front/produit/_delete_form.html.twig') }}
{% endblock %}
